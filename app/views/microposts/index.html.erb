<table class="front">
  <tr>
    <td class="main">
      <h2>Find Micropost</h2>
      <% if @microposts.nil? %>
        <h4>Search field cannot be blank</h4>
      <% elsif @microposts.empty? %>
        <h4>No results from "<%= params[:search] %>"</h4>
      <% else %>
        <%= will_paginate %>
        <table class="microposts">
          <%= render @microposts %>
        </table>
        <%= will_paginate %>
      <% end %>
    </td>
    <td class="sidebar round">
      <%= render 'pages/user_info' %>
      <%= render 'pages/stats' %>
      <% form_tag microposts_path, :method => 'get' do %>
        <%= text_field_tag :search, params[:search] %>
        <%= submit_tag 'Search', :name => nil %>
      <% end %>
    </td>
  </tr>
</table>