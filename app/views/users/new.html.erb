<h2>Sign up</h2>

<% form_for @user do |f| %>
  <div class="field"> 
    <%= f.label :name %><br/>
    <%= f.text_field :name %> <%= error_message_on @user, :name, :prepend_text => "This field " %>
  </div>
  <div class="field"> 
    <%= f.label :username %><br/>
    <%= f.text_field :username %> <%= error_message_on @user, :username, :prepend_text => "Username " %>
  </div>
  <div class="field"> 
    <%= f.label :email %><br/>
    <%= f.text_field :email %> <%= error_message_on @user, :email, :prepend_text => "Email " %>
  </div>
  <div class="field"> 
    <%= f.label :password %><br/>
    <%= f.password_field :password %> <%= error_message_on @user, :password, :prepend_text => "Password " %>
  </div>
  <div class="field"> 
    <%= f.label :password_confirmation %><br/>
    <%= f.password_field :password_confirmation %>
  </div>
  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>